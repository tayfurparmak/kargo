<div class="container">
	<div class="row" style="display: flex; gap: 20px; justify-content: center; align-items: center">
		{{ form_start(form) }}
		<div class="form-group">
			{{ form_label(form.title, 'Kargo Gönderisi : ', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<div class="form-group">
			{{ form_label(form.country, 'Ülke Seciniz : ', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<div class="text-center">
			<button type="submit" class="btn btn-success  justify-content-end">{{ button_label|default('Kaydet') }}</button>
		</div>
		{{ form_end(form) }}
	</div>
</div>
