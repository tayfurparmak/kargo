{% extends 'base.html.twig' %}

{% block title %}Kayıt Ol
{% endblock %}

{% block body %}
	<div class="card mt-2">
		<div class="card-body">
			<h1>Kayıt Ol</h1>
			{{ form_errors(registrationForm) }}
			{{ form_start(registrationForm) }}

				{{ form_row(registrationForm.email, {label: 'E-Posta', 'attr': {'class': 'form-control w-100'}}
				)}}

				{{ form_row(registrationForm.plainPassword, {label: 'Şifre', 'attr': {'class': 'form-control w-100'}})}}

			{{ form_row(registrationForm.agreeTerms) }}
			<button type="submit" class="btn btn-primary">Kayıt Ol</button>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
